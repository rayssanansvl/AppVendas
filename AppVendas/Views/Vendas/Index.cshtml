@model IEnumerable<AppVendas.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Vendas</span>


    <a asp-action="Create" class="btn btn-secondary px-5 w-25 d-flex align-items-center justify-content-center">
        <ion-icon name="add-circle-outline" class="fs-4"></ion-icon><span class="fs-4 ms-2 fst-italic">Adicionar</span>
    </a>
</div>

<div class="table-responsive">
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.NotaFiscal)
                </th>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.DataVenda)
                </th>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.TotalVenda)
                </th>
                <th class="bg-black">
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th class="bg-black"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NotaFiscal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalVenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.ClienteNome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.VendaId" class="btn btn-outline-primary align-items-center">
                            <ion-icon name="create"></ion-icon> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.VendaId" class="btn btn-outline-danger align-items-center ms-2">
                            <ion-icon name="trash"></ion-icon> Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
